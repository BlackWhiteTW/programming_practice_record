{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build C/C++",
            "type": "process",
            "command": "g++",
            "args": [
                "-g",
                "-std=c++17",
                "-O2",
                "-finput-charset=UTF-8",
                "-fexec-charset=UTF-8",
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"],
            "detail": "使用 G++ 直接編譯 C 或 C++ 檔案"
        }
    ]
}